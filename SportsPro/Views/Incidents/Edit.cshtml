@using SportsPro.ViewModels
@model IncidentViewModel
@{
    string title = Model.Action == "Add" ? "Add" : "Edit";
    ViewBag.Title = title;
}

@*Add Validation to Add Edit Pages*@
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="text-center">
    <h1 style="background-color: #b0cac7; font-size: 50px" class="jumbotron"><b>@Model.Action Edit Incident</b></h1>
</div>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentIncident.TechnicianID">Technician</label>
        <select asp-for="CurrentIncident.TechnicianID" class="form-control">
            <option value="">Please select one</option>
            @foreach (Technician g in Model.Technicians)
            {
                <option value="@g.TechnicianID">@g.Name</option>
            }
        </select>
        <span asp-validation-for="CurrentIncident.TechnicianID"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentIncident.CustomerID">Customer</label>
        <select asp-for="CurrentIncident.CustomerID" class="form-control">
            <option value="">Please select one</option>
            @foreach (Customer g in Model.Customers)
            {
                <option value="@g.CustomerID">@g.FullName</option>
            }
        </select>
        <span asp-validation-for="CurrentIncident.CustomerID"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentIncident.ProductID">Product</label>
        <select asp-for="CurrentIncident.ProductID" class="form-control">
            <option value="">Please select one</option>
            @foreach (Product g in Model.Products)
            {
                <option value="@g.ProductID">@g.Name</option>
            }
        </select>
        <span asp-validation-for="CurrentIncident.ProductID"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentIncident.Title">Title</label>
        <input asp-for="CurrentIncident.Title" class="form-control">
        <span asp-validation-for="CurrentIncident.Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentIncident.DateOpened">Date Opened</label>
        <input asp-for="CurrentIncident.DateOpened" class="form-control">
        <span asp-validation-for="CurrentIncident.DateOpened"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentIncident.Description">Description</label>
        <input asp-for="CurrentIncident.Description" class="form-control">
        <span asp-validation-for="CurrentIncident.Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentIncident.DateClosed">Date Closed</label>
        <input asp-for="CurrentIncident.DateClosed" class="form-control">
        <span asp-validation-for="CurrentIncident.DateClosed"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Incidents" asp-action="Index" class="btn btn-info">Cancel</a>
</form>

