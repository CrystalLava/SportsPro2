}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h1 style="font-size:50px;"><b>SportsPro Technical Support</b></h1>

<!--- Carousel -->


<div class="row">
    <div class="col-sm-8">
        <div id="carousel" class="carousel slide" data-ride="carousel" data-interval="6500" data-pause="hover">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item">
                        <img src="/images/cheer.jpg" alt="Cheer">
                    </div>

                    <div class="item">
                        <img src="/images/fire.jpg" alt="Fire">
                    </div>

                    <div class="item active">
                        <img src="/Images/Table.jpg" alt="Table">
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="col-sm-4">

        <div class="well">
            <h3><span class="glyphicon glyphicon-pushpin"></span>Upcoming Team Events<span class="glyphicon glyphicon-pushpin"></span></h3>
            <br />
            <p>
                Sorry Team, all currently planned events are cancelled due to Covid-19.
                Watch your email for some future virtual events. Stay healthy and safe
            </p>
        </div>
    </div>
</div>

<div class="container-fluid padding">


    <div class="row text-center padding">
        <div class="col-12">
            <h2>SportsPro Social</h2>
        </div>
        <div class="col-12 social padding">
            <a href="https://www.facebook.com" ><img src="/images/facebook10.jpg" alt="facebook"></a>
            <a href="https://www.twitter.com"><img src="/images/twitter10.jpg" alt="twitter"></a>
            <a href="https://www.instagram.com" ><img src="/images/instagram10.jpg" alt="instagram"></i></a>
        </div>
    </div>
</div>

