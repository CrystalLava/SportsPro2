@model Customer
@{
    string title = ViewBag.Action == "Add" ? "Add" : "Edit"; @*Title of page is either add or edit, based on what button was clicked*@

    ViewBag.Title = title;
}

@*Add Validation to Add/Edit Pages*@
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="text-center">
    <h1 style="background-color: #decdc3;
        font-size: 50px" class="jumbotron">
        <b>@ViewBag.Action Customer</b>@*Customer and all of their individual info*@
    </h1>
</div>
<form asp-action="Edit" asp-controller="Customers" method="post">
    @if (ViewBag.Action == "Edit")
    {
        <input asp-for="CustomerID" type="hidden" value="@Model.CustomerID" />
    }
    <div class="form-group">
        <label for="fName">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control" id="fName" placeholder="First Name" value=@Model.FirstName>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="lName">Last Name</label>
        <input asp-for="LastName" type="text" class="form-control" id="lName" placeholder="Last Name" value=@Model.LastName>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input asp-for="Address" type="text" class="form-control" id="address" placeholder="Address" value=@Model.Address>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input asp-for="City" type="text" class="form-control" id="city" placeholder="City" value=@Model.City>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input asp-for="State" type="text" class="form-control" id="state" placeholder="State" value=@Model.State>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="postal">Postal Code</label>
        <input asp-for="PostalCode" type="text" class="form-control" id="postal" placeholder="Postal Code" value=@Model.PostalCode>
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="CountryID">Country</label>

        <!--use the asp- items tag helper instead of Select-->
        <select asp-for="CountryID" asp-items="@(new SelectList
        (ViewBag.Countries, "CountryID", "Name", Model.CountryID))" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter Email" value=@Model.Email>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input asp-for="Phone" type="text" class="form-control" id="phone" placeholder="Phone" value=@Model.Phone>
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn" style="background-color: #5c848e; color:white">Save</button>@*Save button*@
    <a asp-controller="Customers" asp-action="Index" class="btn" style="background-color: #5c848e; color:white">Cancel</a>@*Cancel button*@
</form>