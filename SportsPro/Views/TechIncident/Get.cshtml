@model List<Technician>
@{
    ViewData["Title"] = "Get Technician";
}

<script>
    function ChangeMe() {
        const select = document.querySelector("select");
        document.querySelector("#select").setAttribute("href", "/techincident/list/" + select.options[select.selectedIndex].value)
    }
</script>

<div class="text-center">
    <h1 style="background-color: #decdc3; font-size: 50px" class="jumbotron"><b>Technician</b></h1>
</div>

<div class="form-group">
    @*Select Technicians in dropdown menu*@
    <label>Technician</label>
    <select onchange="ChangeMe()" name="id" required class="form-control">
        <option value="" disabled selected hidden>Choose Technician</option>
        @foreach (var t in Model)
        {
            <option value="@t.TechnicianID">@t.Name</option>
        }
    </select>
</div>

<a id="select" asp-controller="TechIncident" asp-action="List"
   class="btn" style="background-color: #5c848e; color:white">Select</a>@*select button*@