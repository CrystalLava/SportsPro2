@model Technician
@{
    ViewBag.Title = "Delete Technician";@*Confirmation of Tech to be deleted*@
}
<div class="alert alert-danger">
    <h2>Confirm Deletion</h2>
    <h3>@Model.Name (@Model.Email)</h3>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TechnicianID" />

        <button type="submit" class="btn btn-primary">Delete</button>@*Delete button*@
        <a asp-controller="Technicians" asp-action="Index"
           class="btn btn-primary">Cancel</a>@*Cancel button*@
    </form>
</div>